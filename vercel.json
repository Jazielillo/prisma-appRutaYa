{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "generated/prisma/**",
          "node_modules/.prisma/client/**",
          "node_modules/@prisma/client/**",
          "prisma/schema.prisma"
        ]
      }
    }
  ],
  "routes": [{ "src": "/api/(.*)", "dest": "api/index.ts" }]
}
